<query id="getPackageList" action="select">
	<tables>
		<table name="resource_packages" alias="r" />
		<table name="member" alias="m" />
	</tables>
	<columns>
		<column name="r.package_srl" alias="package_srl" />
		<column name="r.title" alias="title" />
		<column name="m.nick_name" alias="nick_name" />
		<column name="r.module_srl" alias="module_srl" />
	</columns>
	<conditions>
		<condition operation="equal" column="r.status" default="accepted" />
		<condition operation="equal" column="r.member_srl" default="m.member_srl" pipe="and" />
		<condition operation="like" column="title" var="keyword" pipe="and"/>
	</conditions>
	<navigation>
		<index var="sort_index" default="package_srl" order="desc" />
		<list_count var="list_count" default="20" />
		<page_count var="page_count" default="10" />
		<page var="page" default="1" />
	</navigation>
</query>
